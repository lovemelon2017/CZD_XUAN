<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_map"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/title"
        android:scaleType="center" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/iv_map"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="9dp"
        android:text="新科技市场充电桩"
        android:textColor="@color/black_32"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_pile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:drawableLeft="@drawable/station_name"
        android:drawablePadding="3dp"
        android:text="17个桩 |  交流/直流 | 空闲 7"
        android:textColor="@color/black_83"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pile"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:drawablePadding="3dp"
        android:text="￥1.50豆/kwh"
        android:textColor="@color/black_83"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pile"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/tv_price"
        android:drawableLeft="@drawable/station_type"
        android:drawablePadding="3dp"
        android:text="对外开放"
        android:textColor="@color/black_83"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_type"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:drawableLeft="@drawable/station_address"
        android:drawablePadding="3dp"
        android:text="郑州市金水区曼哈顿"
        android:textColor="@color/black_83"
        android:textSize="12sp" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/tv_address"
        android:layout_marginTop="6dp"
        android:background="@color/gray_e5" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_map"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-30dp"
        android:src="@drawable/navigation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/view1"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:text="桩状态"
        android:textColor="@color/black_32"
        android:textSize="14sp" />
</RelativeLayout>