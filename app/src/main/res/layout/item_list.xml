<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/unite_ripple">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignLeft="@id/tv_charging_type"
        android:layout_alignRight="@id/tv_charging_type"
        android:layout_marginTop="10dp"
        android:background="@color/green_00"
        android:gravity="center"
        android:text="2/16"
        android:textColor="@color/white_ff" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_charging_type"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/tv_count"
        android:layout_marginLeft="12dp"
        android:background="@color/red_f4"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="3dp"
        android:text="智能充电"
        android:textColor="@color/white_ff"
        android:textSize="12sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/tv_count"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black_07"
        android:textSize="14sp"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/tv_count"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="武汉市洪山区东一大道与光谷大道交叉口西南200米"
        android:textColor="@color/black_64"
        android:textSize="12sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/nav"
        android:paddingRight="@dimen/paddingRight"
        android:text="去这里"
        android:textColor="@color/black_32"
        android:textSize="12sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/tv_navigation"
        android:text="0KM"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_charging_type"
        android:layout_marginTop="10dp"
        android:background="@color/gray_d5" />
</RelativeLayout>