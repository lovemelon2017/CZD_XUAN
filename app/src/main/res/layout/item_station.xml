<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="9dp"
        android:textColor="@color/black_32"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_pile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:drawableLeft="@drawable/station_name"
        android:drawablePadding="3dp"
        android:text="17个桩 |  交流/直流 | 空闲 7"
        android:textColor="@color/black_83"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pile"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:drawableLeft="@drawable/station_type"
        android:drawablePadding="3dp"
        android:text="对外开放"
        android:textColor="@color/black_83"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_type"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:drawableLeft="@drawable/station_address"
        android:drawablePadding="3dp"
        android:textColor="@color/black_83"
        android:textSize="12sp" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_address"
        android:layout_marginTop="9dp"
        android:background="@color/gray_e5" />


    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="18dp"
        android:drawableTop="@drawable/station_distance"
        android:textColor="@color/black_83"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/line"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_details"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/station_details"
            android:gravity="center"
            android:paddingLeft="65dp"
            android:paddingRight="65dp"
            android:text="详情"
            android:textSize="13sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_e5" />

        <TextView
            android:id="@+id/tv_navigation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/station_nav1"
            android:gravity="center"
            android:paddingLeft="65dp"
            android:paddingRight="65dp"
            android:text="导航"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@id/linearLayout"
        android:background="@color/gray_e5" />

</RelativeLayout>