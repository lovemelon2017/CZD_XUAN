<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rg_station_type"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_nearest"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableBottom="@drawable/green_line"
            android:gravity="center"
            android:text="距离最近"
            android:textColor="@color/green_00_or_black_64"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rb_free"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@drawable/green_line"
            android:gravity="center"
            android:text="空闲优先"
            android:textColor="@color/green_00_or_black_64"
            android:textSize="14sp" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_e5" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_station"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>