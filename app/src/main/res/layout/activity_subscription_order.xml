<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f2"
    android:orientation="vertical"
    tools:context="._activity._partnerControl._subscriptionOrder.SubscriptionOrderActivity">

    <include layout="@layout/title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_ff"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_subscription_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:text="认购金额"
            android:textColor="@color/black_64"
            android:textSize="16sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_subscription_amount"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:text="￥82000"
            android:textColor="@color/black_32"
            android:textSize="25sp"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_charging_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_amount"
            android:paddingLeft="12dp"
            android:text="120kw快速直流充电桩"
            android:textColor="@color/black_64"
            android:textSize="14sp" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_charging_type"
            android:layout_marginTop="10dp"
            android:background="@color/gray_f2" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:background="@color/white_ff"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="10dp"
            android:text="认购金额过大，为了您的资金安全，请线下进行支付！\n\n支付成功请拍照并上传转账凭证！"
            android:textColor="@color/black_32"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white_ff"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_samo_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:text="账户信息"
            android:textColor="@color/black_32"
            android:textSize="16sp" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_samo_account"
            android:layout_marginTop="10dp"
            android:background="@color/gray_f2" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line2"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:text="公司名称"
            android:textColor="@color/black_64"
            android:textSize="14sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/line2"
            android:enabled="true"
            android:focusable="true"
            android:paddingRight="12dp"
            android:paddingTop="10dp"
            android:text="郑州萨默新能源科技有限公司"
            android:textColor="@color/black_32"
            android:textIsSelectable="true"
            android:textSize="14sp" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_account_name"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:text="开户银行"
            android:textColor="@color/black_64"
            android:textSize="14sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_bank_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_account_name"
            android:enabled="true"
            android:focusable="true"
            android:paddingRight="12dp"
            android:paddingTop="10dp"
            android:text="4105 0167 2843 0000 0352"
            android:textColor="@color/black_32"
            android:textIsSelectable="true"
            android:textSize="14sp" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_bank_number"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:text="账&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;号"
            android:textColor="@color/black_64"
            android:textSize="14sp" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_bank_number"
            android:enabled="true"
            android:focusable="true"
            android:paddingRight="12dp"
            android:paddingTop="10dp"
            android:text="中国建设银行股份有限公司郑州南环支行"
            android:textColor="@color/black_32"
            android:textIsSelectable="true"
            android:textSize="14sp" />
    </RelativeLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_upload_voucher"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/title_radius"
        android:text="转账凭证上传"
        android:textColor="@color/white_ff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="10dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/upload_notice" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_notice"
            android:text="请在24小时内打款成功并上传转账凭证，否则将取消申请名额！ "
            android:textColor="@color/red_f4b"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>